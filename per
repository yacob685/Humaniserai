    <script>
        function calculate1() {
            const perc = parseFloat(document.getElementById('perc1').value);
            const num = parseFloat(document.getElementById('num1').value);
            if(isNaN(perc) || isNaN(num)) {
                document.getElementById('result1').innerText = 'Please enter valid numbers.';
                return;
            }
            const result = (perc / 100) * num;
            document.getElementById('result1').innerHTML = `Result: <span class="text-indigo-600">${result.toFixed(2)}</span>`;
        }

        function calculate2() {
            const num1 = parseFloat(document.getElementById('num2_1').value);
            const num2 = parseFloat(document.getElementById('num2_2').value);
            if(isNaN(num1) || isNaN(num2) || num2 === 0) {
                document.getElementById('result2').innerText = 'Please enter valid numbers (Y cannot be zero).';
                return;
            }
            const result = (num1 / num2) * 100;
            document.getElementById('result2').innerHTML = `Result: <span class="text-indigo-600">${result.toFixed(2)}%</span>`;
        }

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>

