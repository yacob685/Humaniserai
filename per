    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-6 py-12">
        <div class="max-w-xl mx-auto bg-white rounded-lg shadow-md p-8">
            <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">Percentage Calculator</h1>
            
            <!-- Calculation type 1 -->
            <div class="space-y-4 mb-8">
                <p class="text-lg font-medium">What is X% of Y?</p>
                <div class="flex items-center space-x-2">
                    <input type="number" id="perc1" class="w-full rounded-md border-gray-300 shadow-sm p-2" placeholder="X">
                    <span class="text-gray-600">% of</span>
                    <input type="number" id="num1" class="w-full rounded-md border-gray-300 shadow-sm p-2" placeholder="Y">
                </div>
                <button onclick="calculate1()" class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-700">Calculate</button>
                <p id="result1" class="text-center font-semibold text-lg"></p>
            </div>

            <!-- Calculation type 2 -->
            <div class="space-y-4">
                 <p class="text-lg font-medium">X is what percentage of Y?</p>
                <div class="flex items-center space-x-2">
                    <input type="number" id="num2_1" class="w-full rounded-md border-gray-300 shadow-sm p-2" placeholder="X">
                    <span class="text-gray-600">is what % of</span>
                    <input type="number" id="num2_2" class="w-full rounded-md border-gray-300 shadow-sm p-2" placeholder="Y">
                </div>
                <button onclick="calculate2()" class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-700">Calculate</button>
                <p id="result2" class="text-center font-semibold text-lg"></p>
            </div>
        </div>
    </main>

    <!-- Footer -->
